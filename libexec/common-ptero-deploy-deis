# vim: ft=sh


verify_deis_in_path() {
    if [ -z $(which deis) ]; then
        log "deis must be available in PATH"
        exit 1
    fi
}

verify_deis_logged_in() {
    deis apps &> /dev/null
    if [ $? -ne 0 ]; then
        log "Must be logged into deis"
        exit 1
    fi
}

verify_deis() {
    verify_deis_in_path
    verify_deis_logged_in
}

verify_jq() {
    if [ -z $(which jq) ]; then
        log "jq must be available in PATH"
        exit 1
    fi
}
